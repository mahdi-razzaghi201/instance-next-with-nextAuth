import { z } from 'zod';
import {
  coreApiPaginatedRequestSchema,
  coreApiPaginatedResponseSchema,
} from '@/api/instance/core-api';

// Request
export const {{method}}{{pascalCase name}}RequestSchemaTransformed =
  coreApiPaginatedRequestSchema();

// Response
export const {{method}}{{pascalCase name}}ResponseSchemaTransofrmed = 
  coreApiPaginatedResponseSchema(
    z
      .object({
        id: z.number().int(),
        title: z.string(),
        isActive: z.boolean(),
      })
      .passthrough()
      .transform((data) => data),
  );

export const {{method}}{{pascalCase name}}Schema = {
  request: {{method}}{{pascalCase name}}RequestSchemaTransformed,
  response: {{method}}{{pascalCase name}}ResponseSchemaTransofrmed,
};